             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="648">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="0,15">
            
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnAddItemToJob" Height="25" Width="100" HorizontalAlignment="Right" Margin="420,0,0,0" Click="btnAddItemToJob_Click">Add Item to Job</Button>
            <Button Name="btnLoadItem" Height="25" Width="100" HorizontalAlignment="Right" Margin="10,0,0,0" Click="btnLoadItem_Click">Load Item</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
